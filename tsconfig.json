{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "__tests__",
    "dist",
    "knexfile.js",
    "jest.config.js",
    "updateAdminPassword.js",
    "updatePassword.js",
    "scripts/createAdmin.js"
  ]
}