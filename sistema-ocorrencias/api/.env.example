# Sistema de Ocorrências – Backend (Express/Prisma)

###############################################################################
# DEV (local)
###############################################################################
NODE_ENV=development
PORT=3001

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sistema_ocorrencias_dev

# Integração SISGPO ↔ Ocorrências
SISGPO_API_URL=http://localhost:3333
OCORRENCIAS_API_URL=http://localhost:3001
SSO_SHARED_SECRET=replace-with-shared-secret

# Outras variáveis opcionais
LOG_LEVEL=info

###############################################################################
# STAGING (Render / Vercel / Neon)
###############################################################################
NODE_ENV=staging
PORT=10000

DATABASE_URL=postgresql://<neon-staging-user>:<neon-staging-password>@<neon-staging-host>/<neon-staging-database>

SISGPO_API_URL=https://sisgpo-staging.onrender.com
OCORRENCIAS_API_URL=https://sistema-ocorrencias-staging.onrender.com
SSO_SHARED_SECRET=<shared-secret-used-in-both-apps>

LOG_LEVEL=info

###############################################################################
# PRODUÇÃO
###############################################################################
NODE_ENV=production
PORT=10000

DATABASE_URL=postgresql://<neon-prod-user>:<neon-prod-password>@<neon-prod-host>/<neon-prod-database>

SISGPO_API_URL=https://api.sisgpo.gov.br
OCORRENCIAS_API_URL=https://api.sistema-ocorrencias.gov.br
SSO_SHARED_SECRET=<shared-secret-used-in-both-apps>

LOG_LEVEL=warn

###############################################################################
# Observações
# - Mantenha o mesmo SSO_SHARED_SECRET configurado no SISGPO.
# - OCORRENCIAS_API_URL deve apontar para este próprio serviço (usado por clientes).
# - SISGPO_API_URL é consumido ao exportar dados para o SISGPO.
# - Ajuste PORT conforme plano da Render (porta dinâmica começa em 10000).
###############################################################################
