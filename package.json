{
  "name": "sisgpo-api",
  "version": "1.0.0",
  "scripts": {
    "dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node src/server.js",
    "start:prod": "node dist/server.js",
    "knex": "knex --knexfile knexfile.js",
    "migrate:dev": "knex migrate:latest --env development",
    "migrate:prod": "knex migrate:latest --env production",
    "seed:prod": "knex seed:run --env production",
    "build": "tsc",
    "render:build": "npm install",
    "test:setup": "cross-env NODE_ENV=test knex migrate:latest --env test",
    "test": "cross-env NODE_ENV=test npm run test:setup && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.5.2",
    "express-validation": "^4.1.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.4.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.12.0",
    "react-select": "^5.10.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.23",
    "axios": "^1.12.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "jest": "^30.0.5",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
