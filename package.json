{
  "name": "sisgpo-api",
  "version": "1.0.0",
  "scripts": {
    "dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node src/server.js",
    "start:prod": "node dist/server.js",
    "knex": "knex --knexfile knexfile.ts",
    "db:reset": "npm run knex migrate:rollback --all && npm run knex migrate:latest && npm run knex seed:run",
    "db:setup": "npm install && npm run sync:env && npm run db:reset",
    "sync:env": "node scripts/syncEnv.js",
    "migrate:dev": "cross-env NODE_ENV=development npm run knex migrate:latest --env development",
    "migrate:prod": "npm run knex migrate:latest --env production",
    "seed:prod": "npm run knex seed:run --env production",
    "build": "tsc && cd sisgpo-frontend && npm install && npm run build",
    "render:build": "npm install",
    "test:setup": "cross-env NODE_ENV=test npm run knex migrate:latest --env test",
    "test": "cross-env NODE_ENV=test npm run test:setup && cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "stress:test": "ts-node src/scripts/stress-test.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.89.0",
    "@tanstack/react-virtual": "^3.13.12",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.5.2",
    "express-validation": "^4.1.1",
    "express-validator": "^7.2.1",
    "google-auth-library": "^10.4.1",
    "googleapis": "^169.0.0",
    "groq-sdk": "^0.37.0",
    "helmet": "^8.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.12.0",
    "react-select": "^5.10.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.23",
    "@types/nodemailer": "^6.4.21",
    "@types/pg": "^8.16.0",
    "axios": "^1.12.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "jest": "^30.0.5",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
